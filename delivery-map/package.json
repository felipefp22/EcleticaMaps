{
  "name": "delivery-map",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cra-template": "1.2.0",
    "leaflet": "^1.9.4",
    "mysql": "^2.18.1",
    "mysql2": "^3.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^4.2.3"
  },
  "build": {
    "appId": "com.yourcompany.delivery-map",
    "productName": "DeliveryMap",
    "files": [
      "build/**/*",
      "main.js",
      "package.json",
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "icon": "icon.icns"
    },
    "linux": {
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^24.1.0",
    "electron-packager": "^17.1.2",
    "concurrently": "^9.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "copy-main": "cp main.js build/electron.js", 
    "copy-preload": "cp preload.js build/", 
    "electron": "electron ./main.js",
    "electron-dev": "concurrently \"npm start\" \"npm run electron\"",
    "pack": "electron-builder --win --x64",
    "dist": "\"cp main.js build/electron.js\" \"cp preload.js build/\"  electron-builder "
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}